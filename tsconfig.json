{
  "compilerOptions": {
    "lib": [
      "es2021",
      "DOM",
      "DOM.Iterable"
    ],
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2017",
    "sourceMap": false,
    "allowJs": true,
    "baseUrl": ".",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./dist/lib",
    "paths": {
      "./*.ts": [
        "./*"
      ]
    }
  },
  "include": [
    "index.d.ts",
    "test/**/*.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "test/**/*.ts"
  ]
}
